{% extends 'consultant/consultant.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

<!-- component -->
<link rel="stylesheet" href="https://demos.creative-tim.com/notus-js/assets/styles/tailwind.css">
<link rel="stylesheet" href="https://demos.creative-tim.com/notus-js/assets/vendor/@fortawesome/fontawesome-free/css/all.min.css">

<main class="profile-page">
  <section class="relative block h-500-px">
    <img class="absolute top-0 w-full h-full bg-center bg-cover" 
            src=" {{asset('images/background.jpg')}} ">
      <span id="blackOverlay" class="w-full h-full absolute opacity-50 bg-black"></span>
    </div>
    <div class="top-auto bottom-0 left-0 right-0 w-full absolute pointer-events-none overflow-hidden h-70-px" style="transform: translateZ(0px) ">
      <svg class="absolute bottom-0 overflow-hidden" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none" version="1.1" viewBox="0 0 2560 100" x="0" y="0">
        <polygon class="text-blueGray-200 fill-current" points="2560 0 2560 100 0 100"></polygon>
      </svg>
    </div>
  </section>
  <section class="relative py-16 " style="background-color:#FDFDFD  ">
    <div class="container mx-auto px-4">
      <div class="relative flex flex-col min-w-0 break-words bg-white w-full mb-6 shadow-xl rounded-lg -mt-64">
        <div class="px-6">
          <div class="flex flex-wrap justify-center">
            <div class="w-full lg:w-3/12 px-4 lg:order-2 flex justify-center">
              <div class="relative">
                <img alt="..." src="https://demos.creative-tim.com/notus-js/assets/img/team-2-800x800.jpg" class="shadow-xl rounded-full h-auto align-middle border-none absolute -m-16 -ml-20 lg:-ml-16 max-w-150-px">
              </div>
            </div>
            <div class="w-full lg:w-4/12 px-4 lg:order-3 lg:text-right lg:self-center">
              <div class="py-6 px-3 mt-32 sm:mt-0">
                <button class="bg-pink-500 active:bg-pink-600 uppercase text-white font-bold hover:shadow-md shadow text-xs px-4 py-2 rounded outline-none focus:outline-none sm:mr-2 mb-1 ease-linear transition-all duration-150" type="button" style="background-color:#5B98D2 !important">Administrateur</button>
              </div>
            </div>
            <div class="w-full lg:w-4/12 px-4 lg:order-1">
              <div class="flex justify-center py-4 lg:pt-4 pt-8">
                <div class="mr-4 p-3 text-center">
                 <span class="text-sm text-blueGray-400">Evaluation clientèle : </span> <span class="text-xl font-bold block uppercase tracking-wide text-blueGray-600">{{app.user.evalClient}}/5</span>
                </div>


              </div>
            </div>
          </div>
          <div class="text-center mt-12">
            <h3 class="text-4xl font-semibold leading-normal mb-2 text-blueGray-700 mb-2"> {{app.user.prenom}} {{app.user.nom}}</h3>
            <div class="text-sm leading-normal mt-0 mb-2 text-blueGray-400 font-bold uppercase"> date de naissance : {{app.user.dateDeNaissance|date("d-M-Y")}}</div>
            <div class="mb-2 text-blueGray-600 mt-10">
              <i class="fas fa-link mr-2 text-lg text-blueGray-400"></i> Linkedin : <a href="{{app.user.linkLinkedin}}}">{{app.user.linkLinkedin}}</a>
            </div>
            <div class="mb-2 text-blueGray-600">
              <i class="fas fa-link mr-2 text-lg text-blueGray-400"></i> Slack : <a href="{{app.user.linkSlack}}">{{app.user.linkSlack}}</a>
            </div>
             <div class="mb-2 text-blueGray-600">
              <i class="fas fa-phone mr-2 text-lg text-blueGray-400"></i> Contact : {{app.user.tel}}
            </div>
            <div class="mb-2 text-blueGray-600">
              <i class="fas fa-home mr-2 text-lg text-blueGray-400"></i> Adresse : {{app.user.adresse}}
            </div>
            <div class="mb-2 text-blueGray-600">
              <i class="fas fa-euro-sign mr-2 text-lg text-blueGray-400"></i> Salaire souhaité : {{app.user.salaireSouhaite}} €
            </div>
          </div>
          <div class="mt-10 py-10 border-t border-blueGray-200 text-center">
            <div class="flex flex-wrap justify-center">
              <div class="w-full lg:w-9/12 px-4">
                <p class="mb-4 text-lg leading-relaxed text-blueGray-700"> {{app.user.description}}</p>
              </div>
            </div>
          </div>
          <div class="mt-10 py-10 border-t border-blueGray-200 text-center">
            <div class="flex flex-wrap justify-center">
              <div class="w-full lg:w-9/12 px-4">
                <p class="mb-4 text-4xl font-semibold leading-relaxed text-blueGray-700"> Mission</p>
                <div class="grid grid-cols-2 gap-4">
                  {# <div class="text-blueGray-400">{{app.mission}}</div> #}
                  <div class="text-blueGray-400">02</div>
                  <div class="text-blueGray-400">03</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <footer class="relative  pt-8 pb-6 mt-8" style="background-color:#FDFDFD">
  <div class="container mx-auto px-4">
    <div class="flex flex-wrap items-center md:justify-between justify-center">
      <div class="w-full md:w-6/12 px-4 mx-auto text-center">
        <div class="text-sm text-white font-semibold py-1"><img src=" {{ asset('images/LogoClientGris.png') }}"></img></div>
      </div>
    </div>
  </div>
</footer>
  </section>
</main>
{% endblock %}
