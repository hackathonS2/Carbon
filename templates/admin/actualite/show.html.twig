{% extends 'base.html.twig' %}

{% block title %}Actualite{% endblock %}

{% block body %}
    <h1>Actualite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actualite.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ actualite.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ actualite.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ actualite.createdAt ? actualite.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ actualite.updatedAt ? actualite.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
                {% if app.user.roles[0] == 'ROLE_ADMIN' %}

    <a href="{{ path('app_admin_actualite_index') }}">back to list</a>

    <a href="{{ path('app_admin_actualite_edit', {'id': actualite.id}) }}">edit</a>
    {% endif %}
                {% if app.user.roles[0] == 'ROLE_OPERATIONNEL' %}


    <a href="{{ path('app_operationnel_actualite_index') }}">back to list</a>

    <a href="{{ path('app_operationnel_actualite_edit', {'id': actualite.id}) }}">edit</a>
{% endif %}

