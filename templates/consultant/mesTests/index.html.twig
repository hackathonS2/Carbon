{% extends 'consultant/consultant.html.twig' %}
{% block body %}
    <div style="width: 100%;background-color:#f9f8fd ">


    <div style="margin: 100px auto;width: 1000px;">
        {% for testResult in user.testResults %}
            <div style="border: 1px solid #5B98D2;border-radius: 20px; margin: 20px 0px; padding: 20px;background-color: white;box-shadow: 0 4px 6px -1px rgba(0, 0, 0, .1), 0 2px 4px -2px rgba(0, 0, 0, .1);height: 136px;">
                <div style="display: flex; justify-content: space-between;">
                    <p style="font-weight: bold;font-size: 1.4em;width: 150px;">{{ testResult.idTest.nom }}</p>
                    <p style="font-weight: bold;font-size: 1.4em;">Note : {{ testResult.result }} / 100</p>
                    <p>Note Validant : 60/100</p>
                </div>
                <div style="display: flex;justify-content: space-between;align-items: center">
                    <div style="width: 150px">
                        {% if testResult.result >= 60  %}
