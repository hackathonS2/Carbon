
<body class="bg-gray-100">
  <div class="max-w-lg mx-auto my-10 bg-white rounded-lg shadow-md p-20">
    <img class="w-32 h-32 rounded-full mx-auto" src="https://picsum.photos/200" alt="Profile picture">
    <h2 class="text-center text-2xl font-semibold mt-3">{{app.user.nom}} {{app.user.prenom}}</h2>
    <p class="text-right text-gray-600 mt-10"> {{app.user.evalClient}} / 5</p>
    <p class="text-left text-gray-600 mt-10"><b>Date de naissance : </b>{{app.user.dateDeNaissance|date("d-M-Y")}} </p>
    <p class="text-left text-gray-600 mt-1"> <b>Téléphone : </b>{{app.user.tel}} </p>
    <p class="text-left text-gray-600 mt-1"> <b>Adresse : </b>{{app.user.adresse}} </p>
    <p class="text-left text-gray-600 mt-1"><b> Salaire souhaité : </b>{{app.user.salaireSouhaite}} €</p>
    <div class="flex justify-center mt-5">
      <a href="{{app.user.linkLinkedin}}" class="text-blue-500 hover:text-blue-700 mx-3">LinkedIn</a>
      <a href="{{app.user.linkSlack}}" class="text-blue-500 hover:text-blue-700 mx-3">Slack</a>
    </div>
<div class="mt-5">
<div class="border-t border-gray-300 my-5"></div>

<p class="p-5"><b>Mes Softs Skills : </b> </p>
{% for mySoftSkill in mySoftskills|slice(0, 3) %}
  <div class="bg-white p-4 flex  flex-wrap">
    <span class="inline-flex items-center px-2 py-1  bg-[#282B2A] rounded-full text-sm font-semibold text-gray-600">
      <img class="w-4 h-4 fill-current" src="{{ asset('images/ProgresserRouge.png') }}" viewBox="0 0 24 24"></img>
      <span class="ml-1 text-white">
        {{ mySoftSkill.nom }}
      </span>
    </span>
  </div>
{% endfor %}

</div>
<div class="border-t border-gray-300 my-5"></div>

  <h3 class="text-xl font-semibold">Bio</h3>
  <div class="whitespace-pre-wrap break-words">
    <p class="text-gray-600 mt-2">{{app.user.description}}</p>
  </div>
</div>

  </div>
</body>